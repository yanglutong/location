<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm.android.locations.location.viewpagermain.NewMainPager.NewMainActivity">

    <include layout="@layout/tabs" />

    <include
        android:id="@+id/rl0"
        layout="@layout/dingwei" />

    <include
        android:id="@+id/rl1"
        layout="@layout/zhenma"
        android:visibility="gone" />

    <include
        android:id="@+id/rl2"
        layout="@layout/guankong"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/text_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y3"
            android:gravity="center_horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/bt_0"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@mipmap/dw_bl"
                    android:text="" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定位" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/bt_1"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@mipmap/zm_gr"
                    android:text="" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="侦码" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/bt_2"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@mipmap/gk_gr"
                    android:text="" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管控" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>